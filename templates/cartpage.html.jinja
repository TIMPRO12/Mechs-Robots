<body>
    {% include "components/navbar.html.jinja" %}

    <table class="table">
        <thead>
               <tr>
                    <th scope="col">#</th>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
        </thead>
        <tbody>
            {% for item in product %}
            <tr>
