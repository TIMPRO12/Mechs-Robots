<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{product["name"]}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
  {% include "components/navbar.html.jinja" %}
  <div class="container">
    <div class="row">
        <div class="col">
            <img src={{product["image"]}} class="rounded " alt={{product["description"]}}>
        </div>
        <div class="col ps-5">
            <h3 class="">{{product["name"]}}</h3>
            <br>
            <p class="fs-5">{{product["description"]}}</p>
            <h4>${{  "%.2f" | format(product["price"])}}</h4>
            <br>
            <form method="post" action="/product/{{product['id']}}/cart">
              <div>
                <label for="qty" class="form-label">Qty</label>
                <input type="number" class="form-control" id="qty" min="1" max="5" value="1" name="qty">
              </div>
              <button type="submit" class="fs-4 btn btn-info w-75"> Add to Cart </button>
            </form>
        </div>    
    </div>
  </div>
  <div>
    <form>
      <label for="rate">Rate Product</label>
      <input type="number" class="form-control" id="rate" min="1" value="1" max="5" name="rate">
      <label for="content"> Want to leave a review? </label>
      <input type="text" id="content" name="content"> 
      <button type="submit" class="btn btn-info"> Turn in </button>
    </form>
  </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>